<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/topBanner"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/full_image_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="38dp"
        android:visibility="visible">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_btns"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Button3x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="@string/save_button"
                android:visibility="gone" />

            <Button
                android:id="@+id/Button4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="@string/save_button"
                android:visibility="gone" />

            <Button
                android:id="@+id/Button5x5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="@string/save_button"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_puzzle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="37dp"
        android:background="#00000000"
        android:visibility="visible">

        <com.hari.animalpuzzle.DrawingView
            android:id="@+id/puzzle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="@string/puzzle_layout_text_text"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_gotonext"
            android:gravity="center_horizontal"
            android:onClick="showBtnForNextLevel"
            android:text=""
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="#00ff00"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/btn_viewimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_viewimage"
            android:text=""
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_mainmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_mainmenu"
            android:text=""
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomBanner"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"></RelativeLayout>

</RelativeLayout>